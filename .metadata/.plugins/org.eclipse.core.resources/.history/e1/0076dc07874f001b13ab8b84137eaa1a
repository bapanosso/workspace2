package dexercicios;

import javax.swing.JOptionPane;
import java.util.Arrays;
import java.util.Collections;


public class ex4 {

	public static void main(String[] args) {

		int [ ] n = new int[ ] {
				Integer.parseInt(JOptionPane.showInputDialog("Qual o primeiro número? ")),
				Integer.parseInt(JOptionPane.showInputDialog("Qual o segundo número? ")),
				Integer.parseInt(JOptionPane.showInputDialog("Qual o terceiro número? ")),
		};
		
		Arrays.sort(n);
		System.out.println("Ordem crescente: " + n[0] + ", " + n[1] + " e " + n[2]);
		Collections.sort(n, Collections.reverseOrder());    
	}

}
